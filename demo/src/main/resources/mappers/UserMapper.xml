<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.holanswide.demo.dao.UserMapper">
    <update id="updateUserByName">
        update user set password = '11111111' where username = #{name};
    </update>

    <select id="queryUserAll" resultType="com.holanswide.demo.pojo.User">
        select * from user;
    </select>

</mapper>
